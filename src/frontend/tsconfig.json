{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "@vueuse/core"
    ],
    "paths": {
      "@/*": ["src/*"],
      "bpmn-js/lib/*": ["src/lib/bpmn-js/*"],
      "@bpmn-io/properties-panel/*": ["src/lib/bpmn-properties-panel/*"],
      "bpmn-js-properties-panel/*": ["src/lib/bpmn-js-properties-panel/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
